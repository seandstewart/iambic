{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$ref": "#/definitions/Play",
  "definitions": {
    "MetaData": {
      "type": "object",
      "properties": {
        "type": {
          "const": "meta"
        },
        "rights": {
          "const": "Creative Commons Non-Commercial Share Alike 3.0"
        },
        "language": {
          "const": "en-GB-emodeng"
        },
        "publisher": {
          "const": "Published w/ ❤️ using iambic - https://pypi.org/project/iambic"
        },
        "title": {
          "type": "string",
          "default": null
        },
        "subtitle": {
          "type": "string",
          "default": null
        },
        "edition": {
          "type": "integer",
          "default": 1
        },
        "author": {
          "type": "string",
          "default": "William Shakespeare"
        },
        "editors": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "default": []
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "default": null
        }
      }
    },
    "Play": {
      "type": "object",
      "properties": {
        "type": {
          "const": "play"
        },
        "personae": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/Persona"
          }
        },
        "children": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/NodeTree"
          }
        },
        "metaData": {
          "$ref": "#/definitions/MetaData"
        }
      }
    },
    "Act": {
      "type": "object",
      "required": ["type", "index", "num", "text"],
      "properties": {
        "type": {
          "const": "act"
        },
        "index": {
          "type": "integer"
        },
        "num": {
          "type": "integer"
        },
        "text": {
          "type": "string"
        }
      }
    },
    "Action": {
      "type": "object",
      "properties": {
        "type": {
          "const": "action"
        },
        "index": {
          "type": "integer"
        },
        "text": {
          "type": "string"
        },
        "persona": {
          "$ref": "#/definitions/Persona"
        },
        "scene": {
          "$ref": "#/definitions/Scene"
        }
      }
    },
    "Dialogue": {
      "type": "object",
      "properties": {
        "type": {
          "const": "dialogue"
        },
        "index": {
          "type": "integer"
        },
        "lineno": {
          "type": "integer"
        },
        "text": {
          "type": "string"
        },
        "persona": {
          "$ref": "#/definitions/Persona"
        },
        "scene": {
          "$ref": "#/definitions/Scene"
        }
      }
    },
    "Direction": {
      "type": "object",
      "properties": {
        "type": {
          "const": "direction"
        },
        "index": {
          "type": "integer"
        },
        "text": {
          "type": "string"
        },
        "scene": {
          "$ref": "#/definitions/Scene"
        }
      }
    },
    "Entrance": {
      "type": "object",
      "properties": {
        "type": {
          "const": "entrance"
        },
        "index": {
          "type": "integer"
        },
        "text": {
          "type": "string"
        },
        "scene": {
          "$ref": "#/definitions/Scene"
        },
        "personae": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/Persona"
          },
          "default": []
        }
      }
    },
    "Epilogue": {
      "type": "object",
      "properties": {
        "type": {
          "const": "epilogue"
        },
        "index": {
          "type": "integer"
        },
        "text": {
          "type": "string"
        },
        "setting": {
          "type": "string",
          "default": null
        },
        "act": {
          "$ref": "#/definitions/Act",
          "default": null
        }
      }
    },
    "Exit": {
      "type": "object",
      "properties": {
        "type": {
          "const": "exit"
        },
        "index": {
          "type": "integer"
        },
        "text": {
          "type": "string"
        },
        "scene": {
          "$ref": "#/definitions/Scene"
        },
        "personae": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/Persona"
          },
          "default": []
        }
      }
    },
    "Intermission": {
      "type": "object",
      "properties": {
        "type": {
          "const": "intermission"
        },
        "index": {
          "type": "integer"
        },
        "act": {
          "$ref": "#/definitions/Act"
        }
      }
    },
    "Persona": {
      "type": "object",
      "properties": {
        "type": {
          "const": "persona"
        },
        "index": {
          "type": "integer"
        },
        "text": {
          "type": "string"
        },
        "aliases": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/Persona"
          }
        }
      }
    },
    "Prologue": {
      "type": "object",
      "properties": {
        "type": {
          "const": "prologue"
        },
        "index": {
          "type": "integer"
        },
        "text": {
          "type": "string"
        },
        "setting": {
          "type": "string",
          "default": null
        },
        "act": {
          "$ref": "#/definitions/Act",
          "default": null
        }
      }
    },
    "Scene": {
      "type": "object",
      "properties": {
        "type": {
          "const": "scene"
        },
        "index": {
          "type": "integer"
        },
        "text": {
          "type": "string"
        },
        "act": {
          "$ref": "#/definitions/Act"
        },
        "setting": {
          "type": "string",
          "default": null
        }
      }
    },
    "Speech": {
      "type": "object",
      "properties": {
        "type": {
          "const": "speech"
        },
        "index": {
          "type": "integer"
        },
        "persona": {
          "$ref": "#/definitions/Persona"
        },
        "scene": {
          "$ref": "#/definitions/Scene"
        },
        "children": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/Action"
              },
              {
                "$ref": "#/definitions/Dialogue"
              },
              {
                "$ref": "#/definitions/Direction"
              }
            ]
          }
        }
      }
    },
    "NodeTree": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "tree"
        },
        "node": {
          "anyOf": [
            {
              "$ref": "#/definitions/Act"
            },
            {
              "$ref": "#/definitions/Scene"
            },
            {
              "$ref": "#/definitions/Epilogue"
            },
            {
              "$ref": "#/definitions/Prologue"
            }
          ]
        },
        "children": {
          "anyOf": [
            {
              "$ref": "#/definitions/Direction"
            },
            {
              "$ref": "#/definitions/Entrance"
            },
            {
              "$ref": "#/definitions/Exit"
            },
            {
              "$ref": "#/definitions/Intermission"
            },
            {
              "$ref": "#/definitions/Persona"
            },
            {
              "$ref": "#/definitions/Speech"
            },
            {
              "$ref": "#/definitions/NodeTree"
            }
          ]
        }
      }
    }
  }
}

